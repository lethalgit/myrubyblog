<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>
<p>
	<strong>Posts:</strong>
	<% @posts.each do |post| %>
		<h3><%= link_to post.title, post %></h3>
		<p><%= post.body %></p>
	<% end %>
</p>
<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
